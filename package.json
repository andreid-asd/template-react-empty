{
  "name": "tpl-react-lib",
  "version": "0.0.1",
  "description": "React library template starter",
  "license": "MIT",
  "homepage": "https://github.com/andreid-asd/tpl-react-lib#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreid-asd/tpl-react-lib.git"
  },
  "bugs": {
    "url": "https://github.com/andreid-asd/tpl-react-lib/issues"
  },
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreid-asd"
  },
  "main": "dist/index.js",
  "scripts": {
    "----UTIL": "",
    "setup": "rm -rf ./node_modules && npm i && npm audit fix",
    "setup:ci": "npm ci && npm audit fix",
    "update": "npm-check --update",
    "----DEV": "",
    "start": "parcel serve src/core.tests/index.html --no-autoinstall",
    "----BUILD": "",
    "build": "parcel build src/index.jsx",
    "----LINT": "",
    "lint:css": "stylelint \"src/*.css\" \"src/**/*.css\"",
    "lint:md": "markdownlint *.md",
    "lint:js": "eslint --ext .jsx,.js src",
    "lint": "npm run lint:md && npm run lint:css && npm run lint:js",
    "----TEST": "",
    "test": "riteway -r @babel/register -r ignore-styles src/**/*.test.js src/**/*.test.jsx | tap-nirvana",
    "tdd": "nodemon -e js,jsx,json --watch src --exec \"npm test\""
  },
  "dependencies": {
    "@babel/runtime": "^7.10.5",
    "@mutant-ws/m": "^1.16.0",
    "debug": "^4.1.1",
    "fast-deep-equal": "^3.1.3"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-transform-react-constant-elements": "^7.10.4",
    "@babel/plugin-transform-react-display-name": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@mutant-ws/eslint-config": "^5.11.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-jsx-remove-data-test-id": "^2.1.3",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-no-inferred-method-name": "^2.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-unicorn": "^21.0.0",
    "markdownlint-cli": "^0.23.2",
    "nodemon": "^2.0.4",
    "npm-check": "^5.9.2",
    "parcel": "^2.0.0-alpha.3.2",
    "postcss": "^7.0.32",
    "postcss-color-function": "^4.1.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-global-import": "^1.0.6",
    "postcss-modules": "^3.2.0",
    "postcss-nested": "^4.2.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "riteway": "^6.1.2",
    "sanitize.css": "^11.0.1",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "tap-nirvana": "^1.1.0"
  }
}
